extends layout

block content
  .container.mt-5
    h1 Login

    .row.justify-content-center
      .col-sm-8
        .card
          .card-body

            form(action="/login" method="POST")
              .form-group
                label(for="email") Email
                input(type="email" class="form-control" name="username")

              .form-group
                label(for="password") Password
                input.form-control(type="password" name="password")

              button.btn.btn-dark(type="submit") Login

      .card
        .card-body
          a.btn.btn-block(href="/auth/google" role="button")
            i.fab.fa-google
            p Sign In with Google
        .card-body
          a.btn.btn-block(href="/auth/facebook" role="button")
            i.fab.fa-facebook
            p Sign In with Facebook
