extends layout

block content
  .container
    .jumbotron.centered
      i.fas.fa-key.fa-6x
      h1.display-3 Secrets
      p.secret-text Don't keep your secrets, share them anonymously!

      form(action="/submit" method="POST")

        .form-group
          input.form-control.text-center(type="text" name="secret" placeholder="What's your secret?")
        button.btn.btn-dark(type="submit")  Submit
